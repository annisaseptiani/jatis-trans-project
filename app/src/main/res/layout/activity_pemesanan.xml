<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Pemesanan">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:cardBackgroundColor="@color/colorPrimary">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            android:layout_gravity="center"
            app:cardCornerRadius="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:elevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_dari1"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:textSize="8pt"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimaryDark"
                        android:fontFamily="@font/gothic_bold"
                        android:textAlignment="center"
                        android:text="Pulo Gadung">
                    </TextView>
                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:textSize="8pt"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimaryDark"
                        android:fontFamily="@font/gothic_bold"
                        android:textAlignment="center"
                        android:text="to">
                    </TextView>
                    <TextView
                        android:id="@+id/txt_ke1"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:textSize="8pt"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimaryDark"
                        android:fontFamily="@font/gothic_bold"
                        android:textAlignment="center"
                        android:text="Siliwangi Trans">
                    </TextView>


                </LinearLayout>

                <TextView
                    android:id="@+id/txt_date1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2019-12-18 07:00:00"
                    android:textSize="7pt"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:fontFamily="@font/gothic_bold"
                    android:paddingStart="15dp"
                    android:paddingBottom="5dp"
                    android:paddingEnd="10dp">
                </TextView>
                <TextView
                    android:id="@+id/txt_class1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jatis Trans - VIP Shuttle"
                    android:drawablePadding="5dp"
                    android:drawableStart="@drawable/ic_directions_bus_black_24dp"
                    android:textStyle="bold"
                    android:textSize="6pt"
                    android:textColor="@color/colorPrimaryDark"
                    android:fontFamily="@font/gothic_normal"
                    android:paddingStart="10dp"
                    android:paddingTop="5dp"
                    android:paddingEnd="10dp">
                </TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tiket tidak dapat di refund dan di Reschedule."
                    android:textStyle="bold"
                    android:textSize="5pt"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:drawableStart="@drawable/ic_info_black_20dp"
                    android:drawablePadding="5dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:fontFamily="@font/gothic_normal"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp">
                </TextView>


            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Data Pemesanan (untuk E - Tiket)"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:paddingStart="10dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/gothic_bold"
            android:textSize="6pt"
            android:textColor="@color/black">
        </TextView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/colorPrimary50"
            app:cardCornerRadius="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            app:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txt_nama1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gothic_normal"
                    android:textStyle="bold"
                    android:text="NipiCans"
                    android:paddingStart="10dp"
                    android:paddingBottom="5dp"
                    android:paddingTop="10dp"
                    android:textColor="@color/black"
                    android:textSize="7pt">
                </TextView>
                <TextView
                    android:id="@+id/txt_email1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gothic_normal"
                    android:textStyle="bold"
                    android:text="SofyanGanteng@gmail.com"
                    android:textColor="@color/black"
                    android:paddingStart="10dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="5dp"
                    android:textSize="6pt">
                </TextView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rincian Harga"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:paddingStart="10dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/gothic_bold"
            android:textSize="6pt"
            android:textColor="@color/black">
        </TextView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/colorPrimary50"
            app:cardCornerRadius="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            app:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gothic_normal"
                    android:textStyle="bold"
                    android:text="Harga yang harus dibayarkan"
                    android:paddingStart="10dp"
                    android:paddingBottom="5dp"
                    android:paddingTop="10dp"
                    android:textColor="@color/black"
                    android:textSize="7pt">
                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/gothic_normal"
                        android:textStyle="bold"
                        android:text="JatisTrans - VIP Shuttle x 1"
                        android:textColor="@color/colorPrimaryDark"
                        android:paddingStart="10dp"
                        android:textSize="6pt">
                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/gothic_normal"
                        android:textStyle="bold"
                        android:text="Rp. 150.000"
                        android:textColor="@color/colorPrimaryDark"
                        android:paddingEnd="10dp"
                        android:textAlignment="textEnd"
                        android:textSize="6pt">
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/gothic_normal"
                        android:textStyle="bold"
                        android:text="Kode Unik"
                        android:textColor="@color/colorPrimaryDark"
                        android:paddingStart="10dp"
                        android:paddingTop="5dp"
                        android:textSize="6pt">
                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/gothic_normal"
                        android:textStyle="bold"
                        android:text="Rp. 162"
                        android:textColor="@color/colorPrimaryDark"
                        android:paddingEnd="10dp"
                        android:textAlignment="textEnd"
                        android:paddingTop="5dp"
                        android:textSize="6pt">
                    </TextView>
                </LinearLayout>

                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gothic_normal"
                    android:textStyle="bold"
                    android:text="Harga Total"
                    android:textColor="@color/colorPrimaryDark"
                    android:paddingStart="10dp"
                    android:paddingTop="5dp"
                    android:textSize="6pt">
                </TextView>
                <TextView
                    android:id="@+id/total_harga"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gothic_normal"
                    android:textStyle="bold"
                    android:text="Rp. 150.162"
                    android:textColor="@color/colorPrimaryDark"
                    android:paddingEnd="10dp"
                    android:textAlignment="textEnd"
                    android:paddingTop="5dp"
                    android:textSize="6pt">
                </TextView>
            </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btn_lanjutkan"
            android:layout_marginTop="100dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="Lanjutkan"/>
    </LinearLayout>




</LinearLayout>