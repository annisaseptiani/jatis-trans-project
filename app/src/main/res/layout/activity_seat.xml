<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SeatActivity">

    <ImageView
        android:id="@+id/steer"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:src="@drawable/ic_steering" />

    <LinearLayout
        android:id="@+id/LL3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/steer"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/seat1"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:src="@drawable/busseat" />

            <ImageView
                android:id="@+id/seat2"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_toEndOf="@id/seat1"
                android:src="@drawable/busseat" />

            <ImageView
                android:id="@+id/seat3"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/busseat" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/seat4"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:src="@drawable/busseat" />

            <ImageView
                android:id="@+id/seat5"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_toEndOf="@id/seat4"
                android:src="@drawable/busseat" />

            <ImageView
                android:id="@+id/seat6"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/busseat" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/seat7"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:src="@drawable/busseat" />

            <ImageView
                android:id="@+id/seat8"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_toEndOf="@id/seat7"
                android:src="@drawable/busseat" />

            <ImageView
                android:id="@+id/seat9"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/busseat" />

            <ImageView
                android:id="@+id/seat10"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_toStartOf="@id/seat9"
                android:src="@drawable/busseat" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/seat11"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:src="@drawable/busseat" />

            <ImageView
                android:id="@+id/seat12"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_toEndOf="@id/seat11"
                android:src="@drawable/busseat" />

            <ImageView
                android:id="@+id/seat13"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/busseat" />

            <ImageView
                android:id="@+id/seat14"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_toStartOf="@id/seat13"
                android:src="@drawable/busseat" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/RL4"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/seat15"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_toEndOf="@id/wc"
                android:src="@drawable/busseat" />

            <ImageView
                android:id="@+id/wc"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:src="@drawable/ic_wc_black_24dp" />

            <ImageView
                android:id="@+id/seat16"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/busseat" />

            <ImageView
                android:id="@+id/seat17"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_toStartOf="@id/seat16"
                android:src="@drawable/busseat" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/seat18"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_toEndOf="@id/seat19"
                android:src="@drawable/busseat" />

            <ImageView
                android:id="@+id/seat19"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:src="@drawable/busseat" />

            <ImageView
                android:id="@+id/seat20"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/busseat" />

            <ImageView
                android:id="@+id/seat21"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_toStartOf="@+id/seat22"
                android:src="@drawable/busseat" />

            <ImageView
                android:id="@+id/seat22"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_toStartOf="@id/seat20"
                android:src="@drawable/busseat" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:cardBackgroundColor="@color/black_10"
                app:cardElevation="5dp">


                <TextView
                    android:id="@+id/txt_date"
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:text="@string/seat_textview"
                    android:textSize="7pt"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:visibility="invisible"
                    android:layout_marginStart="5dp"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/gothic_normal"/>

                <TextView
                    android:id="@+id/txt_class"
                    android:layout_width="250dp"
                    android:visibility="invisible"
                    android:layout_height="match_parent"
                    android:text="@string/seat_textview"
                    android:textSize="7pt"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:layout_marginStart="5dp"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/gothic_normal"/>

                <TextView
                    android:id="@+id/txt_dari"
                    android:layout_width="250dp"
                    android:visibility="invisible"
                    android:layout_height="match_parent"
                    android:text="@string/seat_textview"
                    android:textSize="7pt"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:layout_marginStart="5dp"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/gothic_normal"/>

                <TextView
                    android:id="@+id/txt_tujuan"
                    android:layout_width="250dp"
                    android:visibility="invisible"
                    android:layout_height="match_parent"
                    android:text="@string/seat_textview"
                    android:textSize="7pt"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:layout_marginStart="5dp"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/gothic_normal"/>



                <TextView
                    android:id="@+id/tv"
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:text="@string/seat_textview"
                    android:textSize="7pt"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:layout_marginStart="5dp"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/gothic_normal"/>

                <Button
                    android:id="@+id/donebtn"
                    android:layout_width="140dp"
                    android:layout_marginStart="250dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_radius2"
                    android:text="@string/selesai_btn"
                    android:fontFamily="@font/gothic_bold"
                    android:textSize="8pt"
                    android:gravity="center"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>