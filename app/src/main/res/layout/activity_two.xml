<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BerandaActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/lay_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:cardBackgroundColor="@color/colorPrimary20"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="5dp"
                    android:src="@drawable/ic_account_circle_black_24dp"></ImageView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/nama"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/gothic_normal"
                        android:paddingStart="70dp"
                        android:textColor="@color/black"
                        android:textSize="6pt"></TextView>

                    <TextView
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/gothic_normal"
                        android:paddingStart="70dp"
                        android:textColor="@color/black"
                        android:textSize="6pt"
                        tools:ignore="RtlSymmetry"></TextView>

                    <TextView
                        android:id="@+id/notlp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/gothic_normal"
                        android:paddingStart="70dp"
                        android:textColor="@color/black"
                        android:textSize="6pt"
                        tools:ignore="RtlSymmetry"></TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:background="@color/colorPrimary50"
            app:cardBackgroundColor="@color/colorPrimary20"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:showDividers="middle"
                android:divider="?android:dividerHorizontal"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnPenumpang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary100"
                    android:drawableStart="@drawable/ic_airline_seat_recline_extra_black_24dp"
                    android:drawableEnd="@drawable/right_arrow"
                    android:drawablePadding="13dp"
                    android:fontFamily="@font/gothic_bold"
                    android:paddingStart="10dp"
                    android:text="@string/penumpang_pendamping"
                    android:textAlignment="textStart"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="7pt"></Button>

                <Button
                    android:id="@+id/btn_Bantuan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary100"
                    android:drawableStart="@drawable/ic_live_help_black_24dp"
                    android:drawableEnd="@drawable/right_arrow"
                    android:drawablePadding="13dp"
                    android:fontFamily="@font/gothic_bold"
                    android:paddingStart="10dp"
                    android:text="@string/bantuan"
                    android:textAlignment="textStart"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="7pt"></Button>

                <Button
                    android:id="@+id/btn_hubungi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary100"
                    android:drawableStart="@drawable/ic_call_black_24dp"
                    android:drawableEnd="@drawable/right_arrow"
                    android:drawablePadding="13dp"
                    android:fontFamily="@font/gothic_bold"
                    android:paddingStart="10dp"
                    android:text="@string/hubungi_kami"
                    android:textAlignment="textStart"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="7pt"></Button>


                <Button
                    android:id="@+id/btn_Tentangkami"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary100"
                    android:drawableStart="@drawable/ic_info_black_24dp"
                    android:drawableEnd="@drawable/right_arrow"
                    android:drawablePadding="13dp"
                    android:fontFamily="@font/gothic_bold"
                    android:paddingStart="10dp"
                    android:text="@string/tentang_kami"

                    android:textAlignment="textStart"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="7pt"></Button>

                <Button
                    android:id="@+id/btn_pengaturan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary100"
                    android:drawableStart="@drawable/ic_settings_black_24dp"
                    android:drawableEnd="@drawable/right_arrow"
                    android:drawablePadding="13dp"
                    android:fontFamily="@font/gothic_bold"
                    android:paddingStart="10dp"
                    android:text="@string/pengaturan"
                    android:textAlignment="textStart"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="7pt"></Button>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="80dp"
            app:cardBackgroundColor="@color/colorPrimary"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_logout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_radius"
                    android:drawableStart="@drawable/ic_arrow_back_black_24dp"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/gothic_bold"
                    android:paddingStart="20dp"
                    android:paddingEnd="10dp"
                    android:text="@string/logout"
                    android:textAlignment="textStart"
                    android:textAllCaps="false"
                    android:textSize="8pt" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        app:itemIconTint="@color/black"
        app:itemTextColor="@color/black"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/navigation" />

</androidx.constraintlayout.widget.ConstraintLayout>